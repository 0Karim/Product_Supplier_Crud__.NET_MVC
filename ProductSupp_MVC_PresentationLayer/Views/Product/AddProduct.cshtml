@model ProductSupp_MVC_PresentationLayer.ViewModels.Suppliers_Product

@{
    ViewBag.Title = "Add New Product";
}

<h2>
    @ViewBag.Title
</h2>


@using (Html.BeginForm("AddProduct", "Product"))
{
    @Html.AntiForgeryToken()

    @Html.Partial("UserControl/ProductControl", Model)

    <div class="form-group">
        <div class="col-md-4"></div>
        <input type="submit" class="btn btn-success" id="btn_save" value="Save" />
    </div>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
